/* Oizom Awards Night - Admin Panel - PREMIUM APPLE-INSPIRED DESIGN */
:root {
  --bg-primary: #000000;
  --bg-secondary: #0A0A0A;
  --bg-elevated: #1C1C1E;
  --bg-card: rgba(28, 28, 30, 0.72);
  --text-primary: #FFFFFF;
  --text-secondary: rgba(255, 255, 255, 0.6);
  --text-tertiary: rgba(255, 255, 255, 0.4);
  --accent-gold: #D4A574;
  --accent-success: #30D158;
  --accent-error: #FF453A;
  --accent-blue: #0A84FF;
  --border: rgba(255, 255, 255, 0.08);
  --border-hover: rgba(255, 255, 255, 0.15);
  --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.6);
  --blur: 40px;
  --radius: 16px;
  --transition: 250ms cubic-bezier(0.4, 0, 0.2, 1);
}

*, *::before, *::after {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', system-ui, sans-serif;
  background: var(--bg-primary);
  color: var(--text-primary);
  line-height: 1.5;
  min-height: 100vh;
}

#app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Header */
header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(var(--blur)) saturate(180%);
  -webkit-backdrop-filter: blur(var(--blur)) saturate(180%);
  border-bottom: 1px solid var(--border);
}

.header-content {
  max-width: 1400px;
  margin: 0 auto;
  padding: 20px 24px;
}

.logo-section {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 16px;
}

.trophy-icon {
  width: 28px;
  height: 28px;
  color: var(--accent-gold);
}

.title-group h1 {
  font-size: 19px;
  font-weight: 600;
  letter-spacing: -0.4px;
}

.subtitle {
  font-size: 13px;
  color: var(--text-secondary);
  font-weight: 500;
}

.header-info {
  display: flex;
  align-items: center;
  gap: 16px;
  flex-wrap: wrap;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px 12px;
  background: var(--bg-elevated);
  border: 1px solid var(--border);
  border-radius: 8px;
  font-size: 13px;
  font-weight: 500;
}

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--text-tertiary);
}

.status-indicator.connected .status-dot {
  background: var(--accent-success);
}

.status-indicator.connecting .status-dot {
  background: var(--accent-gold);
}

.total-summary {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px 12px;
  background: rgba(212, 165, 116, 0.1);
  border: 1px solid rgba(212, 165, 116, 0.2);
  border-radius: 8px;
  font-size: 13px;
  font-weight: 600;
  color: var(--accent-gold);
}

/* Main Content */
#admin-content {
  flex: 1;
  padding: 24px;
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
}

.controls-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
  gap: 16px;
  flex-wrap: wrap;
}

.controls-left {
  display: flex;
  gap: 12px;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 16px;
  background: var(--bg-elevated);
  border: 1px solid var(--border);
  border-radius: 10px;
  color: var(--text-primary);
  font-size: 14px;
  font-weight: 600;
  transition: all var(--transition);
}

.action-btn:hover {
  background: rgba(28, 28, 30, 1);
  border-color: var(--border-hover);
  transform: translateY(-1px);
}

.action-btn:active {
  transform: translateY(0);
}

.lock-all-btn {
  background: rgba(255, 69, 58, 0.1);
  border-color: rgba(255, 69, 58, 0.3);
  color: var(--accent-error);
}

.lock-all-btn:hover {
  background: rgba(255, 69, 58, 0.15);
}

.refresh-btn {
  background: rgba(10, 132, 255, 0.1);
  border-color: rgba(10, 132, 255, 0.3);
  color: var(--accent-blue);
}

.refresh-btn:hover {
  background: rgba(10, 132, 255, 0.15);
}

.legend {
  display: flex;
  gap: 16px;
}

.status-badge {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 6px 12px;
  border-radius: 8px;
  font-size: 12px;
  font-weight: 600;
  border: 1px solid;
}

.status-badge.unlocked {
  background: rgba(48, 209, 88, 0.1);
  border-color: rgba(48, 209, 88, 0.3);
  color: var(--accent-success);
}

.status-badge.locked {
  background: rgba(255, 69, 58, 0.1);
  border-color: rgba(255, 69, 58, 0.3);
  color: var(--accent-error);
}

/* Categories Grid */
.categories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
  gap: 16px;
}

.loading-state {
  grid-column: 1 / -1;
  text-align: center;
  padding: 48px;
}

.loader {
  width: 48px;
  height: 48px;
  margin: 0 auto 16px;
  border: 2px solid var(--border);
  border-top-color: var(--accent-gold);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Category Card */
.category-card {
  background: var(--bg-card);
  backdrop-filter: blur(var(--blur)) saturate(180%);
  -webkit-backdrop-filter: blur(var(--blur)) saturate(180%);
  border: 1px solid var(--border);
  border-radius: var(--radius);
  padding: 20px;
  transition: all var(--transition);
}

.category-card:hover {
  border-color: var(--border-hover);
  transform: translateY(-2px);
}

.category-card[data-unlocked="true"] {
  border-color: rgba(48, 209, 88, 0.3);
  background: rgba(48, 209, 88, 0.05);
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12px;
  margin-bottom: 16px;
  padding-bottom: 16px;
  border-bottom: 1px solid var(--border);
}

.category-number {
  display: inline-block;
  font-size: 11px;
  font-weight: 600;
  color: var(--accent-gold);
  background: rgba(212, 165, 116, 0.1);
  padding: 4px 10px;
  border-radius: 6px;
  margin-bottom: 8px;
  letter-spacing: 0.5px;
}

.category-title {
  font-size: 16px;
  font-weight: 600;
  letter-spacing: -0.3px;
  line-height: 1.3;
}

.category-body {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.nominees-section h4,
.votes-section h4 {
  font-size: 12px;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.nominees-list {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.nominee-item {
  display: flex;
  gap: 8px;
  padding: 6px 10px;
  background: var(--bg-elevated);
  border-radius: 8px;
  font-size: 13px;
}

.nominee-label {
  font-weight: 600;
  color: var(--accent-gold);
  min-width: 16px;
}

.nominee-name {
  color: var(--text-secondary);
}

/* Vote Bars */
.vote-counts {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.vote-bar-label {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  margin-bottom: 4px;
}

.option-label {
  font-weight: 600;
  color: var(--accent-gold);
}

.vote-count {
  font-weight: 600;
  color: var(--text-primary);
}

.vote-bar-fill {
  height: 6px;
  background: var(--accent-gold);
  border-radius: 3px;
  transition: width 0.6s ease;
}

.vote-bar-fill[style*="width: 0"] {
  background: var(--border);
}

.total-votes {
  margin-top: 8px;
  padding-top: 8px;
  border-top: 1px solid var(--border);
  font-size: 12px;
  color: var(--text-secondary);
  display: flex;
  justify-content: space-between;
}

.total-votes-count {
  color: var(--accent-gold);
  font-weight: 600;
}

/* Category Actions */
.category-actions {
  display: flex;
  gap: 8px;
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid var(--border);
}

.unlock-btn,
.lock-btn {
  flex: 1;
  padding: 10px 16px;
  border-radius: 10px;
  font-size: 14px;
  font-weight: 600;
  transition: all var(--transition);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
}

.unlock-btn {
  background: rgba(48, 209, 88, 0.1);
  border: 1px solid rgba(48, 209, 88, 0.3);
  color: var(--accent-success);
}

.unlock-btn:hover {
  background: rgba(48, 209, 88, 0.15);
  transform: translateY(-1px);
}

.lock-btn {
  background: rgba(255, 69, 58, 0.1);
  border: 1px solid rgba(255, 69, 58, 0.3);
  color: var(--accent-error);
}

.lock-btn:hover {
  background: rgba(255, 69, 58, 0.15);
  transform: translateY(-1px);
}

.unlock-btn:active,
.lock-btn:active {
  transform: translateY(0);
}

.unlock-btn:disabled,
.lock-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Error Message */
.error-message {
  position: fixed;
  top: 24px;
  right: 24px;
  max-width: 360px;
  padding: 16px 20px;
  background: rgba(255, 69, 58, 0.9);
  backdrop-filter: blur(var(--blur));
  border: 1px solid rgba(255, 69, 58, 1);
  border-radius: 12px;
  box-shadow: var(--shadow-lg);
  z-index: 1000;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from { opacity: 0; transform: translateX(100px); }
  to { opacity: 1; transform: translateX(0); }
}

.error-text {
  color: var(--text-primary);
  font-size: 14px;
  font-weight: 500;
}

.error-close {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-primary);
  font-size: 18px;
  transition: all var(--transition);
}

.error-close:hover {
  background: rgba(255, 255, 255, 0.3);
}

/* Responsive */
@media (max-width: 768px) {
  .categories-grid {
    grid-template-columns: 1fr;
  }
  
  .controls-section {
    flex-direction: column;
    align-items: stretch;
  }
  
  .controls-left {
    flex-direction: column;
  }
  
  .action-btn {
    width: 100%;
    justify-content: center;
  }
}

/* Accessibility */
button:focus-visible {
  outline: 2px solid var(--accent-gold);
  outline-offset: 2px;
}

@media (prefers-reduced-motion: reduce) {
  *, *::before, *::after {
    animation-duration: 0.01ms !important;
    transition-duration: 0.01ms !important;
  }
}

/* Hide unused elements */
.stars, .twinkling, .header-glow, .card-shine, .btn-ripple, .btn-glow, .badge-pulse {
  display: none;
}
